<h1>Instruction:  <%=@instruction.instruction_name%></h1>
<br /><br />

<h4>Update <%=@instruction.instruction_name() %> </h4>

<form action="/instruction_update/ <%= @instruction.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <label for="instruction_name">Update Instruction:</label>
    <input id="instruction_name" name="instruction_name" type="text">
    <button type="submit" class="btn btn-info">Update Instruction</button>
  </div>
</form>

<form action='/instruction/<%=@instruction.id%>' method='post'>
  <input name='_method' type='hidden' value='delete'>
  <button type='submit' class="btn btn-danger">Delete Instruction</button>
</form>
