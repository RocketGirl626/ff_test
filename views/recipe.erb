<h1>Recipe:  <%=@recipe.recipe_name()%></h1>
<p>Source:  <%=@recipe.source()%></p
<p>Servings:  <%=@recipe.servings()%></p>
<p>Comment:  <%=@recipe.comment()%></p>
<br /><br />

<form action='/recipe_ready/<%=@recipe.id%>' method='get'>
  <button type='submit' class="btn btn-default">Publish Recipe</button>
</form>

<h4>Update <%=@recipe.recipe_name() %> </h4>

<form action="/recipe_name_update/ <%= @recipe.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <label for="recipe_name">Update Recipe Name:</label>
    <input id="recipe_name" name="recipe_name" type="text">
    <button type="submit" class="btn btn-default">Update Recipe Name</button>
  </div>
</form>

<form action="/recipe_source_update/ <%= @recipe.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <label for="source">Update Recipe Source:</label>
    <input id="source" name="source" type="text">
    <button type="submit" class="btn btn-default">Update Recipe Source</button>
  </div>
</form>

<form action="/recipe_servings_update/ <%= @recipe.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <label for="servings">Update Recipe Servings:</label>
    <input id="servings" name="servings" type="text">
    <button type="submit" class="btn btn-default">Update Recipe Servings</button>
  </div>
</form>

<form action="/recipe_comment_update/ <%= @recipe.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <label for="comment">Update Recipe Comment:</label>
    <input id="comment" name="comment" type="text">
    <button type="submit" class="btn btn-default">Update Recipe Comment</button>
  </div>
</form>

<br /><br />

<h3>Recipe Image</h3>

<% if @images.any?() %>
  <% @images.each() do |image| %>
    <ul>
      <img src='<%=image.url%>' width='<%=image.width%>'>
    </ul>
  <%end%>
<%else %>
  <p>You have no image!</p>
<%end%>

<br />

<h3>Add an Image</h3>
<div>
<form action='/recipe_add_img/' method='post'>
  <input type='hidden' name='recipe_id'  value=<%= @recipe.id %>
  <div class='form-group'>
    <label for='image_name'>Image Name:</label>
    <input id='image_name' name='image_name' type='text'>
  </div>
  <div class='form-group'>
    <label for='url'>Image URL:</label>
    <input id='url' name='url' type='text'>
  </div>
  <div class='form-group'>
    <label for='alt'>Alt Tag:</label>
    <input id='alt' name='alt' type='text'>
  </div>
  <div class='form-group'>
    <label for='width'>Width:</label>
    <input id='width' name='width' type='text'>
  </div>
  <div class='form-group'>
    <label for='height'>Height:</label>
    <input id='height' name='height' type='text'>
  </div>
  <button type='submit' class='btn btn-default'>Add Image</button>
</form>

<h3>Ingredients</h3>
  <% if @ingredients.any?() %>
    <% @ingredients.each() do |ingredient| %>
      <ul>
        <li><a href='/ingredient/<%=ingredient.id%>'> <%=ingredient.ingredient_name%></a></li>
      </ul>
    <%end%>
  <%else %>
    <p>You have no ingredients!</p>
  <%end%>

  <br />

  <h4>Add an Ingredient:</h4>

  <form action='/recipe_add_ing/' method='post'>
    <input type='hidden' name='recipe_id'  value=<%= @recipe.id %>
    <div class='form-group'>
      <label for='ingredient_name'>Ingredient:</label>
      <input id='ingredient_name' name='ingredient_name' type='text'>
      <button type='submit' class='btn btn-default'>Add Ingredient</button>
    </div>
  </form>

  <br /><br />
  <div>
  <h3>Instructions</h3>

  <% if @instructions.any?() %>
    <% @instructions.each() do |instruction| %>
      <ul>
        <li><a href='/instruction/<%=instruction.id%>'> <%=instruction.instruction_name%></a></li>
      </ul>
    <%end%>
  <%else %>
    <p>You have no instructions!</p>
  <%end%>

  <br />

  <h4>Add an Instruction:</h4>

  <form action='/recipe_add_ins/' method='post'>
    <input type='hidden' name='recipe_id'  value=<%= @recipe.id %>
    <div class='form-group'>
      <label for='instruction_name'>Instruction:</label>
      <input id='instruction_name' name='instruction_name' type='text'>
      <button type='submit' class='btn btn-default'>Add Instruction</button>
    </div>
  </form>
</div>

  <a href='/'>Go to Recipe Add</a>

</div>
