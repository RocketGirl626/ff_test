<h1>Ingredient:  <%=@ingredient.ingredient_name%></h1>
<br /><br />

<h4>Update <%=@ingredient.ingredient_name() %> </h4>

<form action="/ingredient_update/ <%= @ingredient.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <label for="ingredient_name">Update Ingredient:</label>
    <input id="ingredient_name" name="ingredient_name" type="text">
    <button type="submit" class="btn btn-info">Update Ingredient</button>
  </div>
</form>

<form action='/ingredient/<%=@ingredient.id%>' method='post'>
  <input name='_method' type='hidden' value='delete'>
  <button type='submit' class="btn btn-danger">Delete Ingredient</button>
</form>
