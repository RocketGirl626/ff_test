<h2>Add a Category</h2>
<h3>All Categories</h3>

<% if @categories.any?() %>
    <% @categories.each() do |category| %>
        <ul>
            <li><a href='/category/<%=category.id()%>'> <%=category.cat_name()%></a></li>
        </ul>
    <%end%>
<%else %>
  <p> You have no categories!</p>
<%end%>

<form action='/category_add/' method='post'>
  <label for='cat_name'>Category Name</label>
  <input id='cat_name' name='cat_name' type='text'>
  <button type='submit' class='btn btn-default'>Add Category</button>
</form>

<h2>Add a Season</h2>
<h3>All Seasons</h3>

<% if @seasons.any?() %>
    <% @seasons.each() do |season| %>
        <ul>
            <li><a href='/season/<%=season.id()%>'> <%=season.season_name()%></a> | <%=season.date()%></li>
        </ul>
    <%end%>
<%else %>
  <p> You have no seasons!</p>
<%end%>

<form action='/season_add/' method='post'>
  <div class='form-group'>
    <label for='season_name'>Season Name:</label>
    <input id='season_name' name='season_name' type='text'>
  </div>
  <div class='form-group'>
    <label for='date'>Date:</label>
    <input id='date' name='date' type='text'>
  </div>
  <div class='form-group'>
    <label for='quote_source'>Quote Source:</label>
    <input id='quote_source' name='quote_source' type='text'>
  </div>
  <button type='submit' class='btn btn-default'>Add Season</button>
</form>
